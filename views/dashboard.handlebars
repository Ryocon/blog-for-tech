<div class="container">
  <div class="columns">
    <div class="column">
      <p id="newPost" class="title is-5 has-text-centered">Make a post?</p>
      <div class="field px-3">
        <label class="label">Post Title</label>
        <div class="control"></div>
        <input id="post-title" class="input" type="text" placeholder="Title" />
      </div>
      <div class="field px-3">
        <label class="label">Post Content</label>
        <div class="control">
          <textarea
            id="post-content"
            class="textarea"
            placeholder="Textarea"
          ></textarea>
        </div>
      </div>

      <button id="new-post" class="button mx-3">New Post</button>
    </div>

    <div class="column">
      {{#if posts}}
        {{#each posts}}
          <div class="card">
            <header class="card-header delPost">
              <p class="card-header-title">
                {{title}}
              </p>
              <a class="" href="/dashboard/post/{{id}}"><span
                  class="icon has-text-dark"
                >
                  <i class="fa-solid fa-pen"></i>
                </span></a>
            </header>
            <div class="card-content">
              <div class="content">
                {{body}}
              </div>
            </div>
            <footer class="card-footer">
              <div class="card-footer-item has-text-centered">
                by
                {{user.username}}
              </div>
            </footer>
          </div>
        {{/each}}
      {{else}}
        <div>You have no posts yet</div>
      {{/if}}
    </div>

  </div>
</div>